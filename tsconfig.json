{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016", "esnext.asynciterable"],
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@core": ["./core"],
      "@core/*": ["./core/*"],
      "@data": ["./data"],
      "@data/*": ["./data/*"],
      "@domain": ["./domain"],
      "@domain/*": ["./domain/*"],
      "@api": ["./api"],
      "@api/*": ["./api/*"],
      "@test": ["./test"],
      "@test/*": ["./test/*"]
    }
  },
  "include": [".", "src/api/locale/*.json"],
  "exclude": ["node_modules", "dist", "coverage", "*.test.ts", "tsconfig-paths-dist.js"]
}
